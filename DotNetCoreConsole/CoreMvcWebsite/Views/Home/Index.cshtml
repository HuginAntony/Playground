@model List<CouchBaseCaching.Game>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">

    <h1 class="font-weight-light text-center text-lg-center mt-4 mb-0">XBox Games</h1>

    <hr class="mt-2 mb-5">

    <div class="row text-center text-lg-left">
        
        @for (int i = 0; i < Model.Count; i++)
        {
        <div class="col-lg-2 col-md-4 col-6 text-center px-2">
            <a href="#" class="fancybox" rel="ligthbox">
                <img class="zoom img-fluid img-thumbnail" src="@Model[i].ImageUrl" alt="">
            </a><br/>
            <span>@Model[i].Name</span>
        </div>
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        $(".fancybox").fancybox({
            openEffect: "none",
            closeEffect: "none"
        });
    
        $(".zoom").hover(function(){
		
            $(this).addClass('transition');
        }, function(){
        
            $(this).removeClass('transition');
        });
    });
</script>